generator client {
  provider = "prisma-client-js"
}

generator prismaClassGenerator {
  provider = "prisma-class-generator"
  dryRun   = false
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ActorType {
  HUMAN
  AI
}

model Actor {
  id   Int       @id @default(autoincrement())
  tag  String    @unique
  type ActorType

  @@map("actors")
}

model Message {
  id      Int    @id @default(autoincrement())
  content String
}

model Channel {
  id          Int    @id @default(autoincrement())
  name        String
  code        String @unique
  description String

  @@map("channels")
}
