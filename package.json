    "postgres": "^3.4.4",
    "react": "^18",
    "react-dom": "^18",
    "reset-css": "^5.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "hygen": "^6.2.11",
    "nodemon": "^3.1.4",
    "slug": "^9.1.0",
    "typescript": "^5.1.3"
  }
